{
  "mcpServers": {
    "filesystem-docker-home": {
      "command": "docker",
      "args": ["run", "--rm", "-v", "$HOME/allowed:/data", "mcp/filesystem", "/data"]
    },
    "filesystem-docker-env": {
      "command": "docker",
      "args": ["run", "--rm", "-v", "${ALLOWED_PATH}:/data", "mcp/filesystem", "/data"]
    }
  }
}
